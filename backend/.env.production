# Wink Analytics Platform - Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://wink_user:secure_password@localhost:5432/wink_analytics
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=wink_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=wink_analytics

# Enable Row-Level Security for multi-tenant isolation
ENABLE_RLS=true

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
INVITE_EXPIRE_HOURS=48

# OpenAI Integration
OPENAI_API_KEY=your-openai-api-key-here

# Camera Processing
YOLO_MODEL_PATH=models/yolov8n.pt
ENABLE_REID=true
DETECTION_INTERVAL=0.1
HEARTBEAT_INTERVAL=30

# Processor Configuration
USE_DOCKER_PROCESSOR=false
PROCESSOR_DIR=processors

# Application Settings
ENVIRONMENT=production
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ALLOW_STORE_CREATION=false

# Email Configuration (for invites)
SENDGRID_API_KEY=your-sendgrid-api-key-here
FROM_EMAIL=noreply@yourdomain.com

# Asset Storage
ASSETS_DIR=assets

# Logging
LOG_LEVEL=INFO
SQL_DEBUG=false

# Migration Settings
MIGRATE_FROM_LEGACY=false
LEGACY_DB_PATH=wink_store.db

# Security
SECURE_COOKIES=true
COOKIE_DOMAIN=yourdomain.com