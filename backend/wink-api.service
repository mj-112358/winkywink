[Unit]
Description=Wink Analytics API
After=network.target postgresql.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/var/www/wink-api
Environment="PATH=/var/www/wink-api/venv/bin"
EnvironmentFile=/var/www/wink-api/.env
ExecStart=/var/www/wink-api/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --workers 2
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
