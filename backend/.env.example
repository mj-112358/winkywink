# WINK Backend Environment Configuration
# Copy this file to .env and configure your values

# Store Configuration
STORE_ID=your_store_id
STORE_NAME="Your Store Name"
TZ=Asia/Kolkata

# Database Configuration
DB_PATH=./wink_store.db
DATABASE_URL=postgresql://wink_user:password@postgres:5432/wink_analytics

# Redis Configuration
REDIS_URL=redis://redis:6379

# AI/ML Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
MODEL_DEVICE=cpu  # Options: cpu, cuda
FRAME_RATE=12
DETECTION_INTERVAL=3

# Camera Processing Configuration
DETECTION_CONFIDENCE=0.5
MIN_DETECTION_AREA=1000
TRACK_TIMEOUT=10
MAX_TRACK_DISTANCE=75

# Assets and Storage
ASSETS_DIR=./assets
MODELS_DIR=./models

# Performance Settings
DB_POOL_SIZE=20
RATE_LIMIT_REQUESTS=1000
BACKEND_MEMORY_LIMIT=2g

# Debug and Logging
DEBUG=false
LOG_LEVEL=INFO
API_DEBUG=false

# Analytics Configuration
SPIKE_SENSITIVITY=2.0
BASELINE_DAYS=14
MIN_TREND_POINTS=7

# Security
JWT_SECRET=your-jwt-secret-key-here
CORS_ORIGINS=*

# Optional: Central HQ sync (for multi-store deployments)
CENTRAL_API_BASE=https://api.winkai.in
CENTRAL_API_KEY=sk_store_your_store_id
SYNC_INTERVAL_SECS=300
